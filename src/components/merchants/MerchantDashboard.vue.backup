  justify-content: center;
  align-items: center;
  gap: 8px;
}

.status-chip {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 12px;
  padding: 8px 16px;
  font-size: 0.9rem;
  color: #ffffff;
}

.business-name {
  font-size: 1.5rem;
  font-weight: 700;
  color: #ffffff;
  margin: 0;
}

.business-description {
  color: #ccc;
  margin: 8px 0 16px 0;
  font-size: 1rem;
}

.business-stats {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16px;
  margin-bottom: 16px;
}

.stat-item {
  text-align: center;
  padding: 12px;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 8px;
}

.stat-label {
  display: block;
  font-size: 0.75rem;
  color: #999;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  margin-bottom: 4px;
}

.stat-value {
  display: block;
  font-size: 0.9rem;
  font-weight: 600;
  color: #ffffff;
}

.business-actions {
  display: flex;
  gap: 12px;
  justify-content: center;
}

.btn-3d {
  border-radius: 12px;
  font-weight: 600;
  padding: 12px 24px;
  transition: all 0.3s ease;
}

.btn-3d:hover {
  transform: translateY(-2px);
  box-shadow: 0 6px 16px rgba(0, 0, 0, 0.3);
}

.btn-3d.action-btn {
  background: #bdf000;
  color: #09050d;
}

.btn-3d.payment-btn {
  background: linear-gradient(135deg, #2196f3, #1976d2);
  color: #ffffff;
}

.btn-3d.btn-outline {
  border: 2px solid #bdf000;
  color: #bdf000;
}

.btn-3d.btn-outline:hover {
  background: #bdf000;
  color: #09050d;
}

.btn-3d.btn-danger {
  border: 2px solid #ff4444;
  color: #ff4444;
}

.btn-3d.btn-danger:hover {
  background: #ff4444;
  color: #ffffff;
}

