}

.metric-trend.positive {
  background: rgba(76, 175, 80, 0.2);
  color: #4CAF50;
  border: 1px solid rgba(76, 175, 80, 0.3);
}

.success-rate {
  color: #4CAF50;
  font-weight: 700;
}

