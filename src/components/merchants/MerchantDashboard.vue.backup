<script setup>
import { ref, onMounted, computed } from 'vue'
import { useRouter } from 'vue-router'
import { useAuthStore } from '../../store/auth'
import { useQuasar } from 'quasar'
import api from '../../boot/axios'
import AddBusinessDialog from './AddBusinessDialog.vue'

const router = useRouter()
const auth = useAuthStore()
const $q = useQuasar()

// Reactive data
const loading = ref(false)
const user = ref({})
const totalRevenue = ref(0)
const totalTransactions = ref(0)
const successRate = ref(0)
const avgTransactionAmount = ref(0)
const revenueData = ref([])
const transactionData = ref([])
const businesses = ref([])
const transactions = ref([])
const showAddBusinessDialog = ref(false)

// Computed properties - removed unused ones

// Chart functions
const getBarHeight = (value, data) => {
  const maxValue = Math.max(...data.map(item => item.revenue || item.value || 0))
  return maxValue > 0 ? `${(value / maxValue) * 100}%` : '0%'
}

// Chart functions - removed unused ones

// Utility functions
const formatNumber = (num) => {
  if (!num) return '0'
  return new Intl.NumberFormat('en-US').format(num)
}

// Utility functions - removed unused ones

// Action functions - removed unused ones

const logout = async () => {
  try {
    await auth.logout()
    router.push('/login')
  } catch (error) {
    console.error('Logout error:', error)
  }
}

const onBusinessAdded = (business) => {
  businesses.value.unshift(business)
  $q.notify({
    message: 'Business added successfully!',
    color: 'positive',
    icon: 'check_circle'
  })
}

// Function removed - unused

// Load dashboard data
const loadDashboardData = async () => {
  loading.value = true
  try {
    // Load merchant stats
    const [statsResponse, businessesResponse, transactionsResponse] = await Promise.all([
      api.get('/merchant/stats/revenue'),
      api.get('/merchant/profile'),
      api.get('/merchant/transactions')
    ])

    // Set revenue data
    revenueData.value = statsResponse.data.data || []

    // Set business data
    const businessData = businessesResponse.data.data || []
    businesses.value = Array.isArray(businessData) ? businessData : [businessData]

    // Set transaction data
    const transactionList = transactionsResponse.data.data || []
    transactions.value = transactionList
    totalTransactions.value = transactionList.length
    totalRevenue.value = transactionList.reduce((sum, t) => sum + (t.amount || 0), 0)
    avgTransactionAmount.value = totalTransactions.value > 0 ? totalRevenue.value / totalTransactions.value : 0

    // Calculate success rate
    const successfulTransactions = transactionList.filter(t => t.status === 'completed').length
    successRate.value = totalTransactions.value > 0 ? Math.round((successfulTransactions / totalTransactions.value) * 100) : 0

    // Set transaction data for charts
    transactionData.value = [
      { name: 'Credit Card', value: 45, percentage: 45 },
      { name: 'Bank Transfer', value: 30, percentage: 30 },
      { name: 'Digital Wallet', value: 15, percentage: 15 },
      { name: 'Other', value: 10, percentage: 10 }
    ]

  } catch (error) {
    console.error('Error loading dashboard data:', error)
    $q.notify({
      message: 'Failed to load dashboard data',
      color: 'negative',
      icon: 'error'
    })
  } finally {
    loading.value = false
  }
}

// Computed properties
const approvedBusinessCount = computed(() => 
  businesses.value.filter(b => b.status === 'approved').length
)

const pendingBusinessCount = computed(() => 
  businesses.value.filter(b => b.status === 'pending').length
)

const stripeConnectedCount = computed(() => 
  businesses.value.filter(b => b.stripe_account_id).length
)

const recentTransactions = computed(() => 
  transactions.value.slice(0, 10)
)

// Utility functions
const getTransactionStatusColor = (status) => {
  const colors = {
    'completed': 'positive',
    'pending': 'warning',
    'failed': 'negative',
    'refunded': 'info'
  }
  return colors[status] || 'grey'
}

const formatDate = (dateString) => {
  if (!dateString) return 'N/A'
  return new Date(dateString).toLocaleDateString()
}

const canRefund = (transaction) => {
  return transaction.status === 'completed' && !transaction.refunded
}

const getTotalMethods = () => {
  return transactionData.value.length || 0
}

// Load user data
const loadUserData = async () => {
  try {
    const response = await api.get('/auth/profile')
    user.value = response.data.data || {}
  } catch (error) {
    console.error('Error loading user data:', error)
  }
}

// Lifecycle
onMounted(async () => {
  await loadUserData()
  await loadDashboardData()
})
</script>

